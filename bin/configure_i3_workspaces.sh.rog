#!/bin/bash

isHdmiConnected=$(xrandr | grep 'HDMI-0 connected' | wc -l)
if [ "$isHdmiConnected" -eq 1 ]; then
  targetWorksapce="HDMI-0"
else
  targetWorksapce="LVDS-0"
fi

i3-msg workspace 1
i3-msg move workspace to output "$targetWorksapce"

i3-msg workspace 2
i3-msg move workspace to output "$targetWorksapce"

i3-msg workspace 3
i3-msg move workspace to output "$targetWorksapce"

i3-msg workspace 4
i3-msg move workspace to output "$targetWorksapce"

#!/bin/bash
mkdir -p ~/mnt/biz
mkdir -p ~/mnt/art

CREDENTIALS=$HOME/.ssh/sycred

if mount | grep '//192.168.1.3/Business' > /dev/null; then
  echo "Business already mounted"
else
  sudo mount -t cifs //192.168.1.3/Business ~/mnt/biz -o credentials=$CREDENTIALS,ip=192.168.1.3
fi
if mount | grep '//192.168.1.3/Art' > /dev/null; then
  echo "Art already mounted"
else
  sudo mount -t cifs //192.168.1.3/Art ~/mnt/art -o credentials=$CREDENTIALS,ip=192.168.1.3
fi

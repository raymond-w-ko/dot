#!/bin/bash
CREDENTIALS=$HOME/.ssh/sycred
OPTIONS=credentials=$CREDENTIALS,workgroup=WORKGROUP,soft,vers=2.1

SERVER=192.168.1.3
ARRAY=( \
  "//$SERVER/Business:biz"  \
  "//$SERVER/Art:art"  \
  "//$SERVER/Staff:staff"  \
  "//$SERVER/Software:software"  \
  )

for pair in "${ARRAY[@]}" ; do
  SYPATH=${pair%%:*}
  DIR=${pair#*:}

  if mount | grep "$SYPATH" > /dev/null; then
    echo "$SYPATH already mounted"
  else
    mkdir -p "/mnt/$DIR"
    EXTRA_OPT=",ro"
    if [ "$DIR" == "staff" ]; then
      EXTRA_OPT=",uid=1000"
    fi

    CMD="sudo mount -v -t cifs "$SYPATH" "/mnt/$DIR" -o $OPTIONS$EXTRA_OPT"
    echo $CMD
    $CMD
  fi
done

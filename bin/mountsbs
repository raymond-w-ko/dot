#!/bin/bash
CREDENTIALS=$HOME/.ssh/sycred
OPTIONS=credentials=$CREDENTIALS,ip=192.168.1.3,soft

ARRAY=( \
  '//192.168.1.3/Business:biz'  \
  '//192.168.1.3/Art:art'  \
  '//192.168.1.3/Staff:staff'  \
  '//192.168.1.3/Software:software'  \
  )

for pair in "${ARRAY[@]}" ; do
  SYPATH=${pair%%:*}
  DIR=${pair#*:}

  if mount | grep "$SYPATH" > /dev/null; then
    echo "$SYPATH already mounted"
  else
    mkdir -p "/mnt/$DIR"
    EXTRA_OPT=",ro"
    if [ "$DIR" == "staff" ]; then
      EXTRA_OPT=",uid=1000"
    fi
    sudo mount -t cifs "$SYPATH" "/mnt/$DIR" -o $OPTIONS$EXTRA_OPT
  fi
done

# disable irrelevant error message
nolirc=yes

vo=vdpau,xv

ao=pulse

# scale the subtitles to the 3% of the screen size
subfont-text-scale = 3

# allow to increase the maximal volume
softvol=1
softvol-max=600

# subtitles fixes for anime
ass=true
embeddedfonts=true

# cache
cache=16384
cache-min=30

# WTF, mplayer you shouldn't remember these settings and change Xorg server
brightness=0
contrast=0
hue=0
saturation=0

# multithreaded decoding of H264/MPEG-1/2 (valid: 1-8)
lavdopts=threads=4
# correct pitch when speed is faster or slower than 1.0
af=scaletempo
# allow to seek in a file which is still downloading whilst watching it
idx=yes

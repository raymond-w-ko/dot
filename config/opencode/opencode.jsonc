{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": false,
  "theme": "everforest",
  "permission": {
    "doom_loop": "ask",
    "external_directory": "ask",
  },
  "provider": {
    "opencode": {
      "models": {
        "gpt-5-high": {
          "id": "gpt-5",
          "options": {
            "reasoningEffort": "high",
            "textVerbosity": "low",
            "reasoningSummary": "auto",
          },
        },
        "gpt-5-low": {
          "id": "gpt-5",
          "options": {
            "reasoningEffort": "low",
            "textVerbosity": "low",
            "reasoningSummary": "auto",
          },
        },
      },
    },
    "anthropic": {
      "models": {
        "claude-sonnet-4-5-thinker": {
          "id": "claude-sonnet-4-5",
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 16000,
            },
          },
        },
      },
    },
  },
}

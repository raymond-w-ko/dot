auto-update = off

window-padding-x = 6
window-padding-y = 6
window-width = 180
window-height = 45

theme = Selenized Light

gtk-titlebar = true
window-theme = ghostty
gtk-custom-css = ghostty.css

bell-features=audio,attention,title
bell-audio-path=~/bell.mp3
bell-audio-volume=1.0

cursor-opacity = 1.0
cursor-style = bar
cursor-style-blink = false
cursor-color = #00ff00
cursor-text = #000000

shell-integration-features=no-cursor
app-notifications=false
selection-clear-on-copy=true

keybind = shift+enter=text:\n

config-file = local.config.ghostty

# config from whatbox FAQ
# https://whatbox.ca/wiki/lftp

set bmk:save-passwords true
 
alias dir !ls -Fsh --group-directories-first
alias j jobs
alias jv jobs -v
alias q queue
alias qs queue stop
alias k kill
alias ka kill all
alias m10 mirror -c --use-pget-n=10
alias p10 pget -c -n 10
alias m5 mirror -c --use-pget-n=5
alias p5 pget -c -n 5
alias m2 mirror -c --use-pget-n=2
alias p2 pget -c -n 2

# config from whatbox FAQ
# https://whatbox.ca/wiki/lftp

set bmk:save-passwords true
 
alias dir !ls -Fsh --group-directories-first
alias l cls -1 -a -h -k -l --sort=date
alias j jobs
alias jv jobs -v
alias q queue
alias qs queue stop
alias k kill
alias ka kill all

alias p pget -c -n 1
alias p2 pget -c -n 2
alias p3 pget -c -n 3
alias p4 pget -c -n 4
alias p5 pget -c -n 5
alias p10 pget -c -n 10
alias p15 pget -c -n 15
alias p20 pget -c -n 20

alias m mirror -c --use-pget-n=1
alias m2 mirror -c --use-pget-n=2
alias m3 mirror -c --use-pget-n=3
alias m4 mirror -c --use-pget-n=4
alias m5 mirror -c --use-pget-n=5
alias m10 mirror -c --use-pget-n=10
alias m15 mirror -c --use-pget-n=15
alias m20 mirror -c --use-pget-n=20

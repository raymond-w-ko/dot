[core]
	autocrlf = input
	eol = lf
	excludesfile = ~/.gitignore_global
[user]
	name = Raymond W. Ko
	email = raymond.w.ko@gmail.com
[color]
	diff = always
[push]
	default = matching
	
[color "diff"]
	frag = cyan
	old = yellow
	new = green
	commit = cyan
[color "status"]
	added = green
	changed = cyan
	untracked = normal
	
[alias]
	lg = log --abbrev-commit --decorate --format=format:'%C(yellow)%h%C(reset) - %C(bold green)%ai %C(yellow)%ar %C(reset) %C(reset)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'
	lga = log --abbrev-commit --decorate --format=format:'%C(yellow)%h%C(reset) - %C(bold green)%ai %C(yellow)%ar %C(reset) %C(reset)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
	lg2 = log --graph --pretty=tformat:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%an %ar)%Creset'
	lg3 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n'' %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
[log]
	date = local
	co = checkout

#!/bin/bash

TOUCHPAD="SynPS/2 Synaptics TouchPad"
xinput set-int-prop "$TOUCHPAD" "Device Accel Profile" 32 2 
xinput set-float-prop "$TOUCHPAD" "Device Accel Constant Deceleration" 10.0
xinput set-float-prop "$TOUCHPAD" "Device Accel Adaptive Deceleration" 2.0

# this causes a signficant amount of wakeups in powertop
# but ma spoon^H^H^H^H^H is too big
killall syndaemon
syndaemon -t -k -i 1 -d &
